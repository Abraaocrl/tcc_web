@page "/Carros/Edicao/{id}"
@model TCC_WEB.Pages.Carros.Carros_EditModel
@{
    ViewData["Title"] = "Carros";
    ViewData["Header"] = "Edição";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item "><a href="/Carros">@ViewData["Title"]</a></li>
                    <li class="breadcrumb-item active">@ViewData["Header"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Dados</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-9">
                                <label for="placa">Placa</label>
                            </div>
                             <div class="col-3">
                                <label for="num-passageiros">Nº Passageiros</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-9">
                                <input type="text" id="placa" class="form-control"/>
                            </div>
                            <div class="col-3">
                                <input type="number" id="num-passageiros" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label for="motorista">Motorista</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <select class="select2 form-control" id="motorista"></select>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-2 offset-10">
                                <button class="btn btn-success" id="salvar"><i class="fas fa-check"></i> Salvar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@section Scripts{
<script type="text/javascript">
    $(document).ready(() => {

    })
</script>
}
