@page "/admin/Rotas"
@model TCC_WEB.Pages.admin.RotasModel
@{
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Listagem</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tabela-rotas" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Início</th>
                                        <th>Fim</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>

    @section Scripts{
        <script type="text/javascript">
            function AtualizarDadosTabela() {
                $.ajax({
                    url: environment.api_url + "/Rotas",
                    contentType: "application/json",
                    success: (data) => {
                        let datatable = $('#tabela-rotas').DataTable();

                        datatable.clear();
                        datatable.rows.add(data);
                        datatable.draw(false);
                    }
                });
            }

            function ExcluirRota(id) {
                Swal.fire({
                    title: 'Deseja excluir a rota?',
                    showDenyButton: true,
                    showCancelButton: false,
                    confirmButtonText: 'Sim',
                    denyButtonText: 'Não'
                }).then((result) => {
                    if (result.isConfirmed) {
                        ConfirmarExclusaoRota(id);
                    }
                })
            }

            function ConfirmarExclusaoRota(id) {
                $.ajax({
                    method: "DELETE",
                    url: environment.api_url + "/Rota/" + id,
                    contentType: "application/json",
                    success: (data) => {
                        Swal.fire('Rota excluída!', '', 'info');
                        AtualizarDadosTabela();
                    }
                });
            }

            $(document).ready(() => {
                $.ajax({
                    url: environment.api_url + "/Rota",
                    contentType: "application/json",
                    success: (data) => {
                        $('#tabela-rotas').DataTable({
                            paginate: false,
                            data: data,
                            columns: [
                                { data: "inicio" },
                                { data: "fim" },
                                {
                                    data: "id",
                                    render: function (data, type) {
                                        let url = "@(Model.UriRotaEdicaoPage)".replace("0", data);

                                        if (type === "display") {
                                            return "<a class='btn btn-sm btn-warning' href='" + url + "'><i class='fas fa-edit' ></i> Editar</a> <button class='btn btn-sm btn-danger' onClick='ExcluirRota(" + data + ")'><i class='fas fa-trash'></i> Excluir</button>";
                                        }

                                        return data;
                                    },
                                },
                            ]
                        });
                    }
                })
            })
        </script>
    }
}
