@page "/admin/Rotas"
@model TCC_WEB.Pages.admin.RotasModel
@{
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Listagem</h3>
                            <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#ModalCriarRota"><i class="fas fa-plus"></i> Criar Rota</button>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tabela-rotas" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Início</th>
                                        <th>Fim</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->

        <div class="modal" tabindex="-1" role="dialog" id="ModalCriarRota">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Cadastro de rota</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12">
                                <label for="cidade">Cidade inicial</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <select class="form-control" id="cidade"></select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label for="lat">Latitude</label>
                            </div>
                            <div class="col-6">
                                <label for="lng">Longitude</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <input type="text" class="form-control" id="lat" />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="lng" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-primary" onclick="CriarRota()">Criar</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @section Scripts{
        <script type="text/javascript">
            function AtualizarDadosTabela() {
                $.ajax({
                    url: environment.api_url + "/Rota",
                    contentType: "application/json",
                    success: (data) => {
                        let datatable = $('#tabela-rotas').DataTable();

                        datatable.clear();
                        datatable.rows.add(data);
                        datatable.draw(false);
                    }
                });
            }

            function ExcluirRota(id) {
                Swal.fire({
                    title: 'Deseja excluir a rota?',
                    showDenyButton: true,
                    showCancelButton: false,
                    confirmButtonText: 'Sim',
                    denyButtonText: 'Não'
                }).then((result) => {
                    if (result.isConfirmed) {
                        ConfirmarExclusaoRota(id);
                    }
                })
            }

            function ConfirmarExclusaoRota(id) {
                $.ajax({
                    method: "DELETE",
                    url: environment.api_url + "/Rota/" + id,
                    contentType: "application/json",
                    success: (data) => {
                        Swal.fire('Rota excluída!', '', 'info');
                        AtualizarDadosTabela();
                    }
                });
            }

            function CriarRota() {
                let idCidade = $("#cidade").val();
                let latitude = $("#lat").val();
                let longitude = $("#lng").val();

                var novaParada = {
                    idCidade: idCidade,
                    latitude: latitude,
                    longitude: longitude,
                    horarios: []
                };

                $.ajax({
                    url: environment.api_url + "/Rota/" + idCidade,
                    method: 'post',
                    contentType: 'application/json',
                    data: JSON.stringify(novaParada),
                    success: function (data) {
                        window.location.replace("../admin/Rotas_Edit?id=" + data);
                    }
                })
            }

            function CarregarCidades() {
                $.ajax({
                    url: environment.api_url + "/Cidade",
                    contentType: "application/json",
                    success: (data) => {
                        let opcoes = "<option value=null>--</option>";

                        data.forEach((cidade, indice) => {
                            let opcao = `<option value=${cidade.id}>${cidade.nome}</option>`;

                            opcoes += opcao;
                        });

                        $("#cidade").html(opcoes);
                    }
                })
            }

            function ConfigurarInputs() {
                $('.select2').select2();
            }

            $(document).ready(() => {
                $.ajax({
                    url: environment.api_url + "/Rota",
                    contentType: "application/json",
                    success: (data) => {
                        $('#tabela-rotas').DataTable({
                            paginate: false,
                            data: data,
                            columns: [
                                { data: "inicio" },
                                { data: "fim" },
                                {
                                    data: "id",
                                    render: function (data, type) {
                                        let url = "@(Model.UriRotaEdicaoPage)".replace("0", data);

                                        if (type === "display") {
                                            return "<a class='btn btn-sm btn-warning' href='" + url + "'><i class='fas fa-edit' ></i> Editar</a> <button class='btn btn-sm btn-danger' onClick='ExcluirRota(" + data + ")'><i class='fas fa-trash'></i> Excluir</button>";
                                        }

                                        return data;
                                    },
                                },
                            ]
                        });
                    }
                });

                CarregarCidades();
                ConfigurarInputs();
            })
        </script>
    }
}
