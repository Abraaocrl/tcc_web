@page "/admin/Inicio"
@model TCC_WEB.Pages.HomeModel
@{
    ViewData["Title"] = "Início";
}
@{

     <div class="p-4 row">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3 id="contagem-rota">-</h3>

                        <p>Rotas</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-list text-white"></i>
                    </div>
                    <a href="/admin/Rotas" class="small-box-footer">Acessar <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
}

@section Scripts{
    <script type="text/javascript">
        $(document).ready(() => {
            $.ajax({
                url: environment.api_url + "/Rota/Contagem",
                contentType: "application/json",
                success: (data)=>{
                    $('#contagem-rota').html(data);
                }
            })
        })

    </script>
}
