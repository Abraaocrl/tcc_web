@page
@model IndexModel
@{
    ViewData["Title"] = "Carros";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Listagem de carros </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="tabela-carros" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Placa</th>
                                    <th>Nº Passageiros</th>
                                    <th>Motorista</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(() => {
            $.ajax({
                url: environment.api_url + "/Carro",
                contentType: "application/json",
                success: (data) => {
                    $('#tabela-carros').DataTable({
                        data: data,
                        columns: [
                            { data: "placa" },
                            { data: "passageiros" },
                            { data: "motorista.nome" },
                            { data: "id" },
                        ]
                    });
                }
            })
        })
    </script>
}